<form method="post" action="{{ path('team_delete', {'id': team.id}) }}" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer cette équipe ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ team.id) }}">
    <button align="center" style="width:50%; margin:0 auto; margin-top: 1%;" class="btn btn-danger">Delete</button>
</form>
