{% extends 'base.html.twig' %}

{% block title %}Pokemon{% endblock %}

{% block body %}
    <h1 style="width:1200px; margin:0 auto; margin-top: 3%">Pokemon</h1>

    <div style="width:1200px; margin:0 auto; margin-top: 1%" align="center" class="jumbotron" >
    <table class="table table-hover">
        <tbody class="table-success">
            <tr>
                <th>Id</th>
                <td>{{ pokemon.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pokemon.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td><img src="../../img/{{ pokemon.type }}.png"></td>
            </tr>
            <tr>
                <th>Hp</th>
                <td>{{ pokemon.hp }}</td>
            </tr>
            <tr>
                <th>Nature</th>
                <td>{{ pokemon.nature }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ pokemon.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('pokemon_index') }}">back to list</a>

    <a class="btn btn-info" href="{{ path('pokemon_edit', {'id': pokemon.id}) }}">edit</a>

    {{ include('pokemon/_delete_form.html.twig') }}
    </div>
{% endblock %}
